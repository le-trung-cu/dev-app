generator client {
  provider = "prisma-client-js"
  output   = env("")
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_POST_DATABASE_URL")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
}